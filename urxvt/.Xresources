!- config urxvt by screetsec
!- Font Render
Xft.dpi:96
Xft.antialiasing:true
Xft.rgba:rgb
Xft.hinting:true
Xft.lcdfilter:lcddefault

*.cursorColor: #50DA8B

URxvt.foreground:           #FFFFFF
URxvt.background:           #1B1B1B

URxvt.borderColor:          #1B1D1E
URxvt.borderless:           true
URxvt.internalBorder: 5

URxvt.colorBD:              #ffffff
URxvt.colorIT:              #a761c2
URxvt.colorUL:              #6d9cbe
URxvt.underlineColor:       #333333
URxvt.highlightColor:       #ebac54
URxvt.highlightTextColor:   #7b8748


urxvt*scrollBar:            false
urxvt*scrollBar_right:      false
urxvt*transpscrollbar:      true
urxvt*scrollBar_floating:   true
urxvt*saveLines:            1000000
urxvt*scrollTtyOutput:      true
urxvt*scrollWithBuffer:     false
urxvt*scrollTtyKeypress:    true
URxvt.keysym.Shift-Up: command:\033]720;1\007
URxvt.keysym.Shift-Down: command:\033]721;1\007

URxvt.cursorColor:          #ebac54
URxvt.cursorColor2:         #ebac54
URxvt.cursorBlink:          true
URxvt.cursorUnderline:      false
URxvt.depth:32

!- Perl Extension
URxvt.perl-ext-common:default,matcher,url-select,clipboard
URxvt.url-launcher: firefox
URxvt.matcher.button:1

!- Copy/paste
URxvt.iso14755: False
URxvt.keysym.Shift-Alt-C: perl:clipboard:copy
URxvt.keysym.Shift-Alt-V: perl:clipboard:paste

URxvt.underlineURLs:        true
URxvt.font:xft:Inconsolata\-g:size=10
URxvt.transparent:false
URxvt.shading:30
URxvt.geometry:85x25

!-Urgent Terminal for Notification
URxvt*urgentOnBell: true
URxvt*visualBell:   false

!- Color Scheme
!black
*color0:#1B1B1B
*color8:#1B1B1B

!red
*color1:#EE6254
*color9:#EE6254

!green
*color2:#50DA8B
*color10:#65F6A2

!yellow
*color3:#FDB94D
*color11:#FDD840

!blue
*color4:#63B1E5
*color12:#62BCF9

!magenta
*color5:#775759
*color13:#775759

!cyan
*color6:#53DEC3
*color14:#57EDCF

!white
*color7:#ffffff
*color15:#ffffff
